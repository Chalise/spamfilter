server {
    server_name ld-jizhouya.example.com;
    listen 80 default_server;

    location / {
        root /var/www/spamfilter;
        index index.html;
    }

    location /api {
        rewrite ^/api/(.*) /$1 break;
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP ip_address;
    }
}
